<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Schedule"
    tools:layout_editor_absoluteY="25dp">

    <Button
        android:id="@+id/add_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/icons"
        app:layout_constraintBottom_toTopOf="@+id/id"
        app:layout_constraintEnd_toStartOf="@+id/time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/clear_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="9dp"
        android:background="@drawable/korzina"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnevent"
        app:layout_constraintTop_toBottomOf="@+id/delete_btn" />

    <EditText
        android:id="@+id/event"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/colorRedS"
        android:ems="10"
        android:fontFamily="serif-monospace"
        android:hint="event"
        android:inputType="text"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/delete_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/minuts"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/time"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/colorRedS"
        android:ems="10"
        android:fontFamily="serif-monospace"
        android:hint="hour"
        android:inputType="time"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/id"
        app:layout_constraintEnd_toStartOf="@+id/textView7"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/add_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/delete_btn"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="63dp"
        android:backgroundTint="@color/colorBlueS"
        android:fontFamily="serif-monospace"
        android:text="delete"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/btnevent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/update_btn"
        app:layout_constraintTop_toBottomOf="@+id/event" />

    <Button
        android:id="@+id/update_btn"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="9dp"
        android:backgroundTint="@color/colorBlueS"
        android:fontFamily="serif-monospace"
        android:text="rewrite"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/month"
        app:layout_constraintEnd_toStartOf="@+id/delete_btn"
        app:layout_constraintStart_toEndOf="@+id/done_btn"
        app:layout_constraintTop_toBottomOf="@+id/minuts" />

    <EditText
        android:id="@+id/id"
        android:layout_width="55dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="63dp"
        android:backgroundTint="@color/colorBlueS"
        android:ems="10"
        android:fontFamily="serif-monospace"
        android:hint="id"
        android:inputType="number"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnid"
        app:layout_constraintEnd_toStartOf="@+id/done_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_btn" />

    <EditText
        android:id="@+id/day"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="14dp"
        android:backgroundTint="@color/colorRedS"
        android:ems="10"
        android:fontFamily="serif-monospace"
        android:hint="day"
        android:inputType="date"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnevent"
        app:layout_constraintEnd_toStartOf="@+id/month"
        app:layout_constraintStart_toEndOf="@+id/updateDate"
        app:layout_constraintTop_toBottomOf="@+id/done_btn" />

    <Button
        android:id="@+id/updateDate"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="91dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/update"
        app:layout_constraintBottom_toTopOf="@+id/statsort"
        app:layout_constraintEnd_toStartOf="@+id/day"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/done_btn" />

    <EditText
        android:id="@+id/minuts"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/colorRedS"
        android:ems="10"
        android:fontFamily="serif-monospace"
        android:hint="min"
        android:inputType="time"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/done_btn"
        app:layout_constraintEnd_toStartOf="@+id/event"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        android:text=" :"
        android:textColor="@color/colorRedS"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/done_btn"
        app:layout_constraintDimensionRatio="w,1:2.5"
        app:layout_constraintEnd_toStartOf="@+id/minuts"
        app:layout_constraintStart_toEndOf="@+id/time"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/month"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="14dp"
        android:backgroundTint="@color/colorRedS"
        android:ems="10"
        android:hint="month"
        android:inputType="date"
        app:layout_constraintBottom_toTopOf="@+id/btnevent"
        app:layout_constraintEnd_toStartOf="@+id/year"
        app:layout_constraintStart_toEndOf="@+id/day"
        app:layout_constraintTop_toBottomOf="@+id/update_btn" />

    <EditText
        android:id="@+id/year"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="14dp"
        android:backgroundTint="@color/colorRedS"
        android:ems="10"
        android:hint="year"
        android:inputType="date"
        app:layout_constraintBottom_toTopOf="@+id/btnevent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/month"
        app:layout_constraintTop_toBottomOf="@+id/update_btn" />

    <Button
        android:id="@+id/btnid"
        android:layout_width="24dp"
        android:layout_height="25dp"
        android:layout_marginBottom="11dp"
        android:background="@color/alfa"
        android:fontFamily="serif-monospace"
        android:text="id"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toStartOf="@+id/btntime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id" />

    <Button
        android:id="@+id/btntime"
        android:layout_width="55dp"
        android:layout_height="25dp"
        android:layout_marginTop="63dp"
        android:layout_marginBottom="11dp"
        android:background="@color/alfa"
        android:fontFamily="serif-monospace"
        android:text="|time|"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toStartOf="@+id/statsort"
        app:layout_constraintStart_toEndOf="@+id/btnid"
        app:layout_constraintTop_toBottomOf="@+id/id" />

    <Button
        android:id="@+id/btnevent"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginBottom="11dp"
        android:background="@color/alfa"
        android:fontFamily="serif-monospace"
        android:text="event"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toStartOf="@+id/clear_btn"
        app:layout_constraintStart_toEndOf="@+id/statsort"
        app:layout_constraintTop_toBottomOf="@+id/day" />

    <Button
        android:id="@+id/done_btn"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="9dp"
        android:backgroundTint="@color/colorBlueS"
        android:fontFamily="serif-monospace"
        android:text="done "
        app:layout_constraintBottom_toTopOf="@+id/day"
        app:layout_constraintEnd_toStartOf="@+id/update_btn"
        app:layout_constraintStart_toEndOf="@+id/id"
        app:layout_constraintTop_toBottomOf="@+id/time"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/statsort"
        android:layout_width="65dp"
        android:layout_height="25dp"
        android:layout_marginBottom="11dp"
        android:background="@color/alfa"
        android:fontFamily="serif-monospace"
        android:text="status|"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toStartOf="@+id/btnevent"
        app:layout_constraintStart_toEndOf="@+id/btntime"
        app:layout_constraintTop_toBottomOf="@+id/updateDate" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clear_btn">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/output"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="309dp" />

        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="195dp" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top" />

</androidx.constraintlayout.widget.ConstraintLayout>